---
import { myConfig } from "../config/myConfig";
import { Image } from "astro:assets";
import avatar from "../images/avatar.png";
---

<header>
  <figure>
    <Image
      id="avatar"
      src={avatar}
      alt="Avatar."
      width={100}
      height={100}
      format="avif"
      quality={"high"}
      sizes="100px"
    />
    <!-- <img id="avatar" src="/avatar.png" alt="Avatar" width="100" /> -->
    <div id="socials">
      <a href={myConfig.social.linkedin} target="_blank"><img src="/iLinkedin.svg" alt="Linkedin Icon" width="20" /></a>
      <a href={myConfig.social.github} target="_blank"><img src="/iGithub.svg" alt="Github Icon" width="20" /></a>
    </div>
  </figure>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
    border: 2px solid black;
    margin-inline: auto;
    margin-block: 15px;
    width: 835px;
    min-height: 145px;
  }

  #avatar {
    border: 0.15rem solid black;
    border-radius: 50%;
  }

  #socials {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  #socials > a > img {
    transition: filter 0.2s ease;
  }

  #socials > a > img:hover {
    filter: brightness(0.3); /* darkens the image */
  }

  @media (width <= 900px) {
    header {
      width: 300px;
    }
  }
</style>
