---
import BaseLayout from "./BaseLayout.astro";
import Wrapper from "../Base/Common/Wrapper.astro";
import ArticleDetails from "../Base/Services/Articles/ArticleDetails.astro";
import { getFormattedDate, getReadTime } from "../../utils/utils";

const { article } = Astro.props;
const { title, author, pubDate } = article.data;

const readTime = getReadTime(article);
const date = getFormattedDate(pubDate);
---

<BaseLayout title={title}>
  <Wrapper>
    <ArticleDetails title={title} author={author} date={date} readTime={readTime} />
    <slot />
  </Wrapper>
</BaseLayout>

<style>
  h1 {
    color: var(--system-font-clr);
  }

  p {
    color: var(--system-font-clr-muted);
  }
</style>
