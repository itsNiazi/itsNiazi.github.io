---
import { myConfig } from "../../../config/myConfig";
import { Image } from "astro:assets";
import avatar from "../../../images/avatar.png";
---

<header>
  <figure>
    <Image
      id="avatar"
      src={avatar}
      alt="Pixel art avatar of myself"
      width={300}
      height={300}
      sizes="100px"
      format="avif"
      quality={"high"}
      style="width: 100px; height: auto;"
      loading="eager"
      priority
    />
    <!-- remove inline style attribute ^ -->
    <!-- Find solution for why avatar refreshing on mobile! Solution: loading="eager" -->
    <!-- <img id="avatar" src="/avatar.png" alt="Avatar" width="100" />  (also delete avatar in public folder?)-->
    <div id="socials">
      <a href={myConfig.social.linkedin} target="_blank"
        ><img src="/iLinkedin.svg" alt="Linkedin Icon" width="20" height="20" /></a
      >
      <a href={myConfig.social.github} target="_blank"
        ><img src="/iGithub.svg" alt="Github Icon" width="20" height="20" /></a
      >
    </div>
  </figure>
</header>

<style>
  header {
    color: var(--component-font-clr);
    background-color: var(--component-bg-clr);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--system-font-clr);
    margin-inline: auto;
    margin-block: 15px;
    width: 835px;
    min-height: 145px;
  }

  #avatar {
    border: 0.15rem solid var(--system-font-clr);
    border-radius: 50%;
  }

  #socials {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  #socials > a > img {
    transition: filter 0.2s ease;
  }

  #socials > a > img:hover {
    filter: brightness(0.3); /* darkens the image */
  }

  @media (width <= 900px) {
    header {
      width: 300px;
    }
  }
</style>
